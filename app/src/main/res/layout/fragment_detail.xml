<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.Html" />

        <variable
            name="vm"
            type="com.ztd.interview_test.mvvm.detailfragment.DetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp"
            android:descendantFocusability="blocksDescendants"
            android:focusableInTouchMode="true">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v_guide_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/side_padding" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v_guide_end"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/side_padding" />

            <ImageView
                android:id="@+id/image_header"
                imageGlide="@{vm.imageUrl}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="320:180"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/grey_200"
                android:orientation="vertical"
                android:padding="@dimen/side_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/v_guide_end"
                app:layout_constraintStart_toStartOf="@id/v_guide_start"
                app:layout_constraintTop_toBottomOf="@id/image_header">

                <TextView
                    android:id="@+id/text_title"
                    style="@style/TextStyleTitleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/side_padding"
                    android:layout_marginBottom="@dimen/side_padding"
                    android:text="@{vm.title}"
                    tools:text="title" />

                <TextView
                    android:id="@+id/text_description"
                    style="@style/TextStyleDescDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{Html.fromHtml(vm.description)}"
                    tools:text="description" />

                <TextView
                    android:id="@+id/text_contact_title"
                    style="@style/TextStyleTitleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/side_padding"
                    android:layout_marginBottom="@dimen/side_padding"
                    android:text="@string/contact_information" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_contacts"
                    contactAdapter="@{vm.contacts}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/layout_item_contact" />

                <TextView
                    style="@style/TextStyleTitleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/side_padding"
                    android:layout_marginBottom="@dimen/side_padding"
                    android:text="@string/addresses"
                    android:visibility="@{vm.addresses.size()==0?View.GONE:View.VISIBLE}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_addresses"
                    addressAdapter="@{vm.addresses}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="2"
                    tools:listitem="@layout/layout_item_address"
                    android:visibility="@{vm.addresses.size()==0?View.GONE:View.VISIBLE}"/>

                <TextView
                    style="@style/TextStyleTitleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/side_padding"
                    android:layout_marginBottom="@dimen/side_padding"
                    android:text="@string/notes"
                    android:visibility="@{vm.notes.size()==0?View.GONE:View.VISIBLE}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_notes"
                    noteAdapter="@{vm.notes}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="1"
                    tools:listitem="@layout/layout_item_note"
                    android:visibility="@{vm.notes.size()==0?View.GONE:View.VISIBLE}"  />

                <TextView
                    style="@style/TextStyleTitleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/side_padding"
                    android:layout_marginBottom="@dimen/side_padding"
                    android:text="@string/socials"
                    android:visibility="@{vm.socialMedia.size()==0?View.GONE:View.VISIBLE}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_social"
                    socialMediaAdapter="@{vm.socialMedia}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:visibility="@{vm.socialMedia.size()==0?View.GONE:View.VISIBLE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/layout_item_social_media" />

                <TextView
                    style="@style/TextStyleTitleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/side_padding"
                    android:layout_marginBottom="@dimen/side_padding"
                    android:text="@string/business_hours"
                    android:visibility="@{vm.bizHours.size()==0?View.GONE:View.VISIBLE}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_business_hours"
                    businessHourAdapter="@{vm.bizHours}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/layout_item_business_hour"
                    android:visibility="@{vm.bizHours.size()==0?View.GONE:View.VISIBLE}"  />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>