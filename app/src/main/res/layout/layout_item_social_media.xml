<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.ztd.interview_test.mvvm.detailfragment.adapter.socialmediaadapter.SocialMediaItemViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            socialImageAdapter="@{vm.socialType}"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/item_spacing"
            android:layout_marginTop="@dimen/side_padding"
            android:layout_marginEnd="@dimen/item_spacing"
            android:layout_marginBottom="@dimen/side_padding"
            android:background="@drawable/bg_dark_oval"
            android:scaleType="centerInside"
            android:contentDescription="@null"
            android:padding="@dimen/side_padding"
            android:onClick="@{() -> vm.onItemClick()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>