<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="54dp"
            android:src="@drawable/img_mahdi"
            android:id="@+id/circleView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextStyleTitle"
            android:text="@string/mahdi_name_and_last_name"
            android:id="@+id/profile_name"
            android:layout_marginTop="@dimen/side_padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextStyleDescDark"
            android:text="@string/mahdi_mail_address"
            android:id="@+id/profile_address"
            android:layout_marginTop="@dimen/side_padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drawer_description"
            android:id="@+id/profile_email"
            android:layout_marginTop="@dimen/side_padding"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</layout>